@model IEnumerable<Villa>
@{
    ViewData["title"] = "Villa List";
    Layout = "_AdminLayout";

}

<div class="container my-5">
    <div class="card shadow-lg border-0 p-4 p-md-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary fw-bold display-6">List of Villas</h3>
            <a asp-action="Create" asp-controller="Villa" class="btn btn-primary rounded-pill px-4 py-2">
                <i class="bi bi-plus-circle-fill me-2"></i>New Villa
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Square Footage</th>
                        <th scope="col">Occupancy</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">No villas found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var obj in Model)
                        {
                            <tr class="text-center">
                                <td>@obj.Name</td>
                                <td>$@obj.Price.ToString("F2")</td>
                                <td>@obj.Sqft sqft</td>
                                <td>@obj.Occupancy</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Update" asp-controller="Villa" asp-route-id="@obj.Id"
                                           class="btn btn-info btn-sm mx-1 rounded-pill text-white">
                                            <i class="bi bi-pencil-square me-1"></i>Update
                                        </a>
                                        <a asp-action="Delete" asp-controller="Villa" asp-route-id="@obj.Id"
                                           class="btn btn-danger btn-sm mx-1 rounded-pill">
                                            <i class="bi bi-trash-fill me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>